<div class="grid">
	<div class="col-1-1 side"></div>
	<div class="col-1-2 photo-and-button">
		<div id="photo"></div>
		<div class="col-1-4 side"></div>
		<div class="col-1-2">
			<button id="more">More Photos</button>
		</div>
		<div class="col-1-4 side"></div>
	</div>
	<div class="col-1-2">
		<ul id="photos"></ul>	
		<div id="cart"></div>
	</div>
</div>

<script type="text/template" id="thumbnail-template">
	<div class='thumb'><img src='{{ url }}'/></div>
</script> 

<script type="text/template" id="big-photo-template">
	<div id='big'>
		<img src='{{ url }}'/>
		<button id="add-to-cart">Add to Cart</button>
		<button id="remove-from-cart">Remove from Cart</button>
		<button id="empty-cart">Empty Cart</button>
	</div>
</script>

<script type="text/template" id="cart-template">
	<h3>Items: {{this.length}}</br>Total: ${{this.total}}</h3>
</script>

<script>
	var app = app || {};
	app.photos = new Photos();
	app.appView = new AppView({collection: app.photos});
	app.photos.reset(<%= @photos.to_json %>)
	app.cart = new ShoppingCart([], {total: 0});
	app.cartView = new ShoppingCartView({collection: app.cart});
</script>

